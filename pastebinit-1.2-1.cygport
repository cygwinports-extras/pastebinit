DESCRIPTION="Command-line pastebin client"
HOMEPAGE="http://www.stgraber.org/category/pastebinit/"
SRC_URI="http://launchpad.net/pastebinit/trunk/${PV}/+download/${P}.tar.bz2"

src_compile() { :; }

src_install() {
	cd ${S}
	dobin pastebinit
	insinto /etc/pastebin.d
	doins pastebin.d/*.conf
	dodoc pastebinit.xml
}
